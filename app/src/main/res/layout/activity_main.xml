<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.MainActivity">

    <Button
            android:id="@+id/btnShowJoke"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Show Joke"
            android:background="#0B5EEE"
            android:layout_centerInParent="true"
    />
    <RelativeLayout
            android:id="@+id/layoutShowJoke"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:visibility="gone"
    >
        <ImageView
                android:background="@drawable/haha"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="70dp"/>
        <ImageView
                android:background="@drawable/ha"
                android:layout_alignParentTop="true"
                android:layout_width="100dp"
                android:layout_height="70dp"/>
        <ImageView
                android:background="@drawable/hahaha"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_width="120dp"
                android:layout_height="70dp"/>
        <TextView
                android:id="@+id/txtType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FCF7F7"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>
        <LinearLayout
                android:layout_below="@+id/txtType"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:id="@+id/setuplayout"
                android:layout_height="wrap_content">
            <ImageView
                    android:background="@drawable/ha"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    />
            <TextView
                    android:id="@+id/txtSetup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FCF7F7"
                    android:layout_marginTop="10dp"
                    android:textSize="25dp"
                    android:layout_marginLeft="10dp"/>
        </LinearLayout>

       <LinearLayout
               android:layout_below="@+id/setuplayout"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
           <ImageView
                   android:background="@drawable/haha"
                   android:layout_width="70dp"
                   android:layout_height="50dp"
                   android:layout_centerInParent="true"/>
           <TextView
                   android:id="@+id/txtPunchline"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="#FCF7F7"
                   android:layout_marginTop="10dp"
                   android:textSize="25dp"
                   android:layout_marginLeft="10dp"/>
       </LinearLayout>

    </RelativeLayout>

</RelativeLayout>